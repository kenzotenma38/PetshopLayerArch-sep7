@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Categories</h2>
        <a class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="Create">Create New</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Is Deleted</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.IsDeleted</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


